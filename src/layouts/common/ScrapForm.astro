---
import Button from "../../components/common/Button.astro";
import Input from "../../components/common/Input.astro";
import ParagraphSection from "../../components/common/ParagraphSection.astro";
import Textarea from "../../components/common/Textarea.astro";
import TitleSection from "../../components/common/TitleSection.astro";
import Container from "./Container.astro";

---

<Container background="bg-reciclacel_dark_blue" subtitleText="scrap" subtitleTextLineColor="#4BB3FD" subtitleTextColor="text-white">
    <div class="flex flex-col md:flex-row w-full gap-10">
        <div class="w-full md:w-1/3 flex flex-col gap-1">
            <TitleSection text1="recolectamos tu " text2="scrap" textColor1="text-white" textColor2="text-reciclacel_green" />
            <ParagraphSection
                text="¿Te estorba tu scrap?, te lo compramos, contamos con la certificación CEL-PRME-208/2012"
                textColor="text-white"
            />
        </div>
        <form class="w-full md:w-2/3 flex flex-col gap-8">
            <div class="w-full flex flex-col sm:flex-row gap-8">
                <Input name={"name_contact_scrap"} type={"text"} placeholder={'nombre'} />
                <Input name={"phone_contact_scrap"} type={"tel"} placeholder={'teléfono'} />
            </div>
            <Input name={"email_contact_scrap"} type={"email"} placeholder={'correo electrónico'} />
            <select class="w-full 2xl:text-xl 3xl:text-3xl px-5 py-4 font-roboto outline-none border border-[#A9A9A9] focus:border-[#202C38]" name="" id="">
                <option disabled selected hidden value="0">Seleccione el tipo de scrap</option>
                <option class="capitalize font-roboto" value="Plástico">plástico</option>
                <option class="capitalize font-roboto" value="Chatarra">chatarra</option>
                <option class="capitalize font-roboto" value="Cartón">cartón</option>
            </select>
            <div class="w-full flex flex-col sm:flex-row justify-between gap-8">
                <div class="g-recaptcha" data-sitekey="6Le_eIcjAAAAAJ4_4gq6r_op9HY-fRLnGzY1VYtm"></div>
                <div class="w-full sm:w-fit">
                    <Button id={"send_contact_scrap"} text={"enviar"} />
                </div>
            </div>
        </form>
    </div>
</Container>