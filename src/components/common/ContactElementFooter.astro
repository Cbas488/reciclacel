---
import type { link } from '../../utilities/types'

export interface Props {
    icon: string
    links: Array<link>
}

const { icon, links } = Astro.props
---

<li class="flex gap-2 items-center">
    <i class={`text-xl 2xl:text-3xl 3xl:text-4xl bi ${icon} text-reciclacel_green`}></i>
    <div class="flex flex-col font-roboto leading-6 text-base md:text-lg 3xl:text-2xl 4xl:text-3xl text-white">
        {
            links.map(linklElement => <a href={linklElement.link}>{linklElement.text}</a>)
        }
    </div>
</li>