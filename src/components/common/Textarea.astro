---
import type { HTMLAttributes } from 'astro/types';

export interface Props extends HTMLAttributes<'textarea'>{}

const { rows, name, placeholder, ...rest } = Astro.props
---

<textarea class="w-full 2xl:text-xl 3xl:text-3xl px-5 py-4 placeholder:capitalize outline-none transition-all duration-500 font-roboto border border-[#A9A9A9] focus:border-[#202C38] focus:placeholder:opacity-0" rows={rows} name={name} id={name} placeholder={placeholder} {...rest}/>