---
export interface Props {
    icon: string
    text: string
    link: string
}

const { icon, text, link } = Astro.props
---

<li class="flex gap-2 items-center">
    <i class:list={[`text-xl 2xl:text-3xl 3xl:text-4xl bi ${icon} text-reciclacel_green`]}></i>
    <a class="flex flex-col font-roboto leading-6 text-base md:text-lg 3xl:text-2xl 4xl:text-3xl first-letter:uppercase text-white" href={link}>{text}</a>
</li>